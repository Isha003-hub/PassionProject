@model IEnumerable<MuseAndMasterpiece.Models.CategoryDto>

<h1 class="text-center my-4">Category List</h1>

<div class="mb-4">
    <a asp-action="Add" class="btn btn-primary btn-lg">Add New Category</a>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date Created</th>
                <th>Total Artworks</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CName</td>
                    <td>@category.DateCreated</td>
                    <td>@category.TotalArtworks</td>
                    <td class="text-center">
                        <a class="btn btn-info" href="@Url.Action("Details", "CategoryPage", new { id = category.CategoryId })">View Details</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning" href="@Url.Action("Edit", "CategoryPage", new { id = category.CategoryId })">Edit</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-danger" href="@Url.Action("ConfirmDelete", "CategoryPage", new { id = category.CategoryId })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
