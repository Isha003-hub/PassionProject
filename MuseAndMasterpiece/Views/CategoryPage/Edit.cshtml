@model MuseAndMasterpiece.Models.UpdateCategoryDto

<div class="text-center">
    <h1>Edit Category</h1>
</div>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />

    <div class="form-group">
        <label for="CName">Category Name</label>
        <input type="text" class="form-control" id="CName" name="CName" value="@Model.CName" required />
        <span asp-validation-for="CName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DateCreated">Date Created</label>
        <input type="date" class="form-control" id="DateCreated" name="DateCreated" value="@Model?.DateCreated" required />
        <span asp-validation-for="DateCreated" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
    </div>
</form>

<div class="text-center my-3">
    <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-primary btn-sm">Back to Details</a>
    <a asp-action="List" class="btn btn-secondary btn-sm">Back to List</a>
</div>
