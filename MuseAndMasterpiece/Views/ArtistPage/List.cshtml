@model IEnumerable<MuseAndMasterpiece.Models.ArtistDto>

<h1 class="text-center my-4">Artist List</h1>

<div class="mb-4">
    <a asp-action="Add" class="btn btn-primary btn-lg">Add New Artist</a>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Bio</th>
                <th>Total Artworks</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model)
            {
                <tr>
                    <td>@artist.ArtistId</td>
                    <td>@artist.Name</td>
                    <td>@artist.Bio</td>
                    <td>@artist.TotalArtworks</td>
                    <td class="text-center">
                        <a class="btn btn-info" href="@Url.Action("Details", "ArtistPage", new { id = artist.ArtistId })">View Details</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning" href="@Url.Action("Edit", "ArtistPage", new { id = artist.ArtistId })">Edit</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-danger" href="@Url.Action("ConfirmDelete", "ArtistPage", new { id = artist.ArtistId })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
