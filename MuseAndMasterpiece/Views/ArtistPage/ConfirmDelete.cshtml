@model MuseAndMasterpiece.Models.ArtistDto

<div class="text-center">
    <h1>Delete Artist</h1>
</div>

<div class="alert alert-warning text-center">
    <p>Are you sure you want to delete the artist <strong>@Model.Name</strong>?</p>
</div>

<form asp-action="Delete" asp-controller="ArtistPage" asp-route-id="@Model.ArtistId" method="post">
    <div class="form-group text-center">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a asp-action="List" asp-route-id="@Model.ArtistId" class="btn btn-secondary btn-lg mx-2">Cancel</a>
    </div>
</form>
