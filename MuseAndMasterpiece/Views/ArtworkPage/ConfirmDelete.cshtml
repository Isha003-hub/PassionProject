@model MuseAndMasterpiece.Models.ArtworkDto

<div class="text-center">
    <h1>Delete Artwork</h1>
</div>

<div class="alert alert-warning text-center">
    <p>Are you sure you want to delete the artwork <strong>@Model.Title</strong>?</p>
</div>

<form asp-action="Delete" asp-controller="ArtworkPage" asp-route-id="@Model.ArtWorkId" method="post">
    <input type="hidden" name="id" value="@Model.ArtWorkId" />

    <div class="form-group text-center">
        <button type="submit"  class="btn btn-danger btn-lg">Delete</button>
        <a asp-action="List" class="btn btn-secondary btn-lg mx-2">Cancel</a>
    </div>
</form>
